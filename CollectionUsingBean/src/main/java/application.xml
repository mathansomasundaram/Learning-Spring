<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   	http://www.springframework.org/schema/util 
    http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="question1"
		class="com.spring.CollectionUsingBean.QuestionAnswer">
		<property name="question" value="What is Java" />
		<property name="options">
			<list>
				<value>Java is an OOP Language</value>
				<value>Java is a platform Independent Language</value>
			</list>
		</property>
		<property name="sampleMap">
			<util:map>
				<entry key="key1" value="value1" />
				<entry key="key2" value="value2" />
				<entry key="key3" value="value3" />
			</util:map>
		</property>

	</bean>


</beans>